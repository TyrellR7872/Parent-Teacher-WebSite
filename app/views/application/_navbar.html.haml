%nav.navbar.navbar-expand.navbar-dark.flex-column.flex-md-row.bg-emerald
  = link_to "HCS-PTO", root_path, :class => "navbar-brand mr-0 mr-md-2"
  %div.navbar-nav-scroll
    %ul.navbar-nav
      -if !current_user_account.nil?
        -if current_user_account.admin?
          %li.nav-item
            =link_to "User Accounts", user_accounts_path, :class => 'nav-link'
      %li.nav-item
        =link_to "Events", calendar_events_path, :class => 'nav-link'
      %li.nav-item
        =link_to "Clubs and Organizations", pages_path(:clubs), :class => 'nav-link'
      %li.nav-item
        =link_to "Create a Request", new_request_path, :class => 'nav-link'
      %li.nav-item
        =link_to "About", pages_path(:about), :class => 'nav-link'
  %ul.navbar-nav.flex-row.ml-md-auto.d-none.d-md-flex
    -if !current_user_account.nil?
      %li.nav-item
        =link_to "Hello, #{current_user_account.name}", user_account_path(current_user_account), :class => 'nav-link p-2'
      %li.nav-item
        =link_to "Log Out", destroy_user_account_session_path, method: :delete, :class => 'nav-link p-2'
    -else
      %li.nav-item
        =link_to "Sign In", new_user_account_session_path, :class => 'nav-link p-2'
      %li.nav-item
        =link_to "Sign Up", new_user_account_registration_path, :class => 'nav-link p-2'
