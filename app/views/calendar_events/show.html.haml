#main.container
  %br
  %br

  .row
    .col-sm-2
    .col-sm-8
      %h3.header.title= "#{@calendar_event.title}"
    .col-sm-offset-1

  .row
    .col-sm-8.image= image_tag @calendar_event.image.url(:medium)

  %br

  .row
    .col-sm-offset-8
    .col-sm-8.description= "#{@calendar_event.description}"

  .row
    .col-sm-offset-2
    .col-sm-8.date_time= "Start date and time: #{@calendar_event.start_date_time ? @calendar_event.start_date_time.to_formatted_s(:short): "No time indicated"}"
  .row
    .col-sm-offset-2
    .col-sm-8.date_time= "End date and time: #{@calendar_event.end_date_time ? @calendar_event.end_date_time.to_formatted_s(:short): "No time indicated"}"
  .row
    .col-sm-offset-2
    .col-sm-8.location= "The event is at #{@calendar_event.location}."
  .row
    .col-sm-8.contact_person= "#{@calendar_event.contact_person} is the contact person for this event."

  %br
  %br

  .row
    .col-sm-offset-1
    .col-sm-2= link_to 'Back to events list', calendar_events_path, :class => "btn btn-primary btn-md"
    .col-sm-2= link_to 'Sign up to volunteer for this event', volunteer_signup_calendar_event_path, :class => "btn btn-success btn-md"
    -if !current_user_account.nil? and current_user_account.admin
      .col-sm-2= link_to('Show volunteers list', show_volunteer_list_calendar_event_path)
      .col-sm-2= link_to('Edit event details', edit_calendar_event_path(@calendar_event))
      .col-sm-2= link_to('Delete event', calendar_event_path(@calendar_event), :method => :delete)
